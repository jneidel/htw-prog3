<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.3-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <top>
        <HBox prefHeight="20.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Upload: " />
                <TextField fx:id="uploadField" onKeyPressed="#handleUploadField" prefWidth="400"/>
            </children>
        </HBox>
    </top>
    <center>
        <VBox>
            <Label>Liste:</Label>
            <ScrollPane prefWidth="500">
                <content>
                    <ListView fx:id="itemList" prefWidth="450"> </ListView>
                </content>
            </ScrollPane>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="letzte Aktion:" />
                <Label fx:id="lastAction" text="keine" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
